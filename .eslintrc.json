{
    "env": {
        "node": true,
        "es6": true,
        "commonjs": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error",
            { "argsIgnorePattern": "req|res|next|val" }
        ]
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    }
}
